<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#84000000"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/white"
                />
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"
                />
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_baseline_play_circle_outline_24"
        />
</layer-list>